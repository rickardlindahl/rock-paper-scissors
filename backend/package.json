{
  "name": "backend",
  "version": "1.0.0",
  "description": "Rock Paper Scissors Node.js backend implemented in (TypeScript)",
  "main": "index.js",
  "scripts": {
    "build": "npm run lint && npm run tsc",
    "clean": "rimraf coverage .nyc_output dist",
    "dev": "nodemon -e ts --exec \"npx ts-node -r tsconfig-paths/register -T --pretty --project tsconfig.json src/index.ts\"",
    "lint": "eslint \"**/*.ts\"",
    "nyc": "nyc npm run test",
    "start-node": "node dist/index.js",
    "start": "npm run clean && npm run tsc && npm run start-node",
    "test-watch": "jest --watch",
    "test": "jest",
    "tsc": "tsc -p tsconfig.json"
  },
  "author": "Rickard Lindahl",
  "license": "ISC",
  "devDependencies": {
    "@hapi/code": "^8.0.6",
    "@hapi/lab": "^24.5.1",
    "@types/hapi__hapi": "^20.0.10",
    "@types/jest": "^27.4.0",
    "@types/node": "^16.11.21",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "concurrently": "^7.0.0",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.4.7",
    "jest-cli": "^27.4.7",
    "lab-transform-typescript": "^3.0.1",
    "nodemon": "^2.0.15",
    "nyc": "^15.1.0",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "@hapi/hapi": "^20.2.1",
    "joi": "^17.6.0"
  }
}
