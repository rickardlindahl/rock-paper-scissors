{
  "name": "backend",
  "version": "1.0.0",
  "description": "Rock Paper Scissors Node.js backend implemented in (TypeScript)",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "clean": "rimraf coverage .nyc_output dist",
    "dev": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,green.bold\" \"npm run watch:ts\" \"npm run watch:node\"",
    "lint": "npm run lint:types && npm run lint:eslint",
    "lint:types": "npm run build -- --noEmit",
    "lint:eslint": "eslint \"**/*.ts\"",
    "start": "node dist/index.js",
    "test": "lab --sourcemaps --transform node_modules/lab-transform-typescript -v src/**/*.test.ts",
    "watch:node": "nodemon dist/index.js",
    "watch:ts": "npm run build -- -w"
  },
  "author": "Rickard Lindahl",
  "license": "ISC",
  "devDependencies": {
    "@hapi/code": "^8.0.6",
    "@hapi/lab": "^24.5.1",
    "@types/hapi__boom": "^9.0.1",
    "@types/hapi__hapi": "^20.0.10",
    "@types/node": "^16.11.21",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "concurrently": "^7.0.0",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "lab-transform-typescript": "^3.0.1",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "@hapi/boom": "^9.1.4",
    "@hapi/hapi": "^20.2.1",
    "joi": "^17.6.0"
  }
}
